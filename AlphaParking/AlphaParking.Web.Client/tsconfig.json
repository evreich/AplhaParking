{
  "compilerOptions": {
    "baseUrl": "./clientApp",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "removeComments": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react",
    "target": "es5",
    "outDir": "./dist/",
    "typeRoots": [
      "./typing",
      "./node_modules/@types"
    ],
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "es2017.object",
      "es2018.promise"
    ]
  },
  "include": [
    "./clientApp//*"
  ],
  "exclude": [
    "node_modules",
    "wwwroot",
    "typing"
  ]
}